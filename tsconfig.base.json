{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@codemachine/ui": ["libs/ui/src"],
      "@codemachine/ui/*": ["libs/ui/src/*"],
      "@codemachine/shared": ["libs/shared/src"],
      "@codemachine/shared/*": ["libs/shared/src/*"],
      "@codemachine/supabase": ["libs/supabase/src"],
      "@codemachine/supabase/*": ["libs/supabase/src/*"]
    }
  },
  "include": ["apps", "libs", "tooling", "tests"],
  "exclude": ["node_modules", "dist", ".turbo"]
}
